{
  "name": "cv",
  "description": "Mijn eigen cv website!",
  "version": "1.0.0",
  "devDependencies": {
    "npm": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.67.0",
    "rollup": "^3.29.2",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "browser-sync": "^2.29.3"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "run-p watch live",
    "build": "run-s build:*",
    "build:sass": "sass -s compressed --no-source-map scss/main.scss public/css/main.min.css",
    "build:js": "rollup js/main.js -o public/js/main.min.js -f es -p commonjs -p node-resolve -p terser",
    "watch": "run-p watch:*",
    "watch:sass": "sass -w --update -s compressed --no-source-map scss/main.scss public/css/main.min.css",
    "watch:js": "rollup js/main.js -o public/js/main.min.js -f es -w -p commonjs -p node-resolve -p terser",
    "live": "browser-sync start -p http://cv.local -f public/css/main.min.css public/js/main.min.js views/** --no-online --no-notify --no-ui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IJuanTM/cv"
  },
  "keywords": [
    "cv",
    "curriculum vitae"
  ],
  "author": "Iwan van der Wal",
  "license": "GPL-3.0-only",
  "homepage": "https://cv.iwanvanderwal.nl"
}
